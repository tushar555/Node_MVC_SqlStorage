<!DOCTYPE html>
<html lang="en">
<%- include('../includes/header.ejs') %>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if(isProductavailable){%>
        <div class="grid">

            <% products.forEach((pro)=>{ %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= pro.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= pro.imgUrl %>" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price"><%= pro.price %></h2>
                    <p class="product__description"><%= pro.description %>
                    </p>
                </div>
                <div class="card__actions">
                    <!-- <form action="/cart" method="POST">
                        <button class="btn" type="submit">Add to cart</button>
                        <input type="hidden" name="productId" value="<%=  pro.id%>">
                    </form> -->
                    <%- include('../includes/add-cart.ejs',{product:pro}) %>
                </div>
            </article>

            <%  }) %>

        </div>
        <% } else{ %>
        <h4>No Products.</h4>
        <% } %>
    </main>
</body>

</html>